// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  uuid          String   @unique @default(uuid())
  name          String   @unique
  email         String   @unique
  password      String
  phone         Int
  img           String?
  role          String?   @default("user")
  gender        String
  refresh_token String? @db.Text
  cart      Cart[]
}

model Product {
  id         Int     @id @default(autoincrement())
  uuid       String  @unique @default(uuid())
  name       String
  img        Json
  categories Json
  detail     String
  desc       String
  price      Int
  rating     Int?
  stock      Stock[]
  cart Cart[]
}
model Cart {
  id         Int     @id @default(autoincrement())
  uuid       String  @unique @default(uuid())
  user_id    String  
  product_id   String
  quantity   Int
  price      Int
  product      Product @relation(fields: [product_id], references: [uuid])
  user       User @relation(fields: [user_id], references: [uuid])
}
model Stock {
  id         Int     @id @default(autoincrement())
  uuid       String  @unique @default(uuid())
  product_id String
  size       String
  color      String
  stock      Int
  product    Product @relation(fields: [product_id], references: [uuid])
}
